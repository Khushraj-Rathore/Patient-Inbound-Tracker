<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-md-8 mx-auto">

    <h1 class="create-title text-center mb-4">Enter Visit</h1>

    <form action="/visits" method="POST">

    <input type="hidden" name="visit[patientID]" value="<%= patientID %>">

      <div class="mb-3">
        <label class="form-label">Visit Date</label>
        <input
          type="date"
          name="visit[visitDate]"
          class="form-control"
          required
        >
      </div>

      <div class="mb-3">
        <label class="form-label">Visit Type</label>
        <input
          type="text"
          name="visit[visitType]"
          class="form-control"
          placeholder="appointment / walk-in"
          required
        >
      </div>

      <div class="mb-3">
        <label class="form-label">Status</label>
        <input
          type="text"
          name="visit[status]"
          class="form-control"
          placeholder="checked_in/ with_provider / completed / no-show"
          required
        >
      </div>

      <div class="mb-3">
        <label class="form-label">Reason</label>
        <input
          type="text"
          name="visit[reason]"
          class="form-control"
          placeholder="Reason for visit"
          required
        >
      </div>

      <button class="btn btn-dark">Add Visit</button>

    </form>

  </div>
</div>
