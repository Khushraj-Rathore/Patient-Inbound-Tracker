<% layout("/layouts/boilerplate") %>
<div class="row color">
  <div class="col-md-8 mx-auto">

    <h1 class="create-title">Create Patient</h1>

    <form method="POST" action="/patients">

      <div class="mb-3">
        <label class="form-label">First name</label>
        <input type="text" name="patient[firstname]" class="form-control" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Lastname</label>
        <input type="text" name="patient[lastname]" class="form-control" required>
      </div>


        <div class="mb-3">
          <label class="form-label">DOB</label>
          <input name="patient[dob]" class="form-control" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Phone Number</label>
          <input type="text" name="patient[phones][0][original]" class="form-control" required>
        </div>

      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" name="patient[email]" class="form-control" required>
      </div>

       <div class="mb-3">
        <label class="form-label">MedicalAlert</label>
        <input type="text" name="patient[medicalAlerts]" class="form-control" required>
      </div>

      <button class="btn btn-dark">Add</button>

    </form>

  </div>
</div>
